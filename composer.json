{
    "config": {
        "vendor-dir": "wp-content/vendor"
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wp-block-admin",
                "type": "wordpress-plugin",
                "version": "0.2.3",
                "dist": {
                    "type": "zip",
                    "url": "https://downloads.wordpress.org/plugin/wp-block-admin.0.2.3.0.zip"
                },
                "require": {
                    "composer/installers": "v1.1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "restrict-taxonomies",
                "type": "wordpress-plugin",
                "version": "1.3.0",
                "dist": {
                    "type": "zip",
                    "url": "https://downloads.wordpress.org/plugin/restrict-taxonomies.1.3.0.zip"
                },
                "require": {
                    "composer/installers": "v1.1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "rss-shortcode",
                "type": "wordpress-plugin",
                "version": "0.2",
                "dist": {
                    "type": "zip",
                    "url": "https://downloads.wordpress.org/plugin/rss-shortcode.0.2.zip"
                },
                "require": {
                    "composer/installers": "v1.1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "polylang",
                "type": "wordpress-plugin",
                "version": "2.0.2",
                "dist": {
                    "type": "zip",
                    "url": "https://downloads.wordpress.org/plugin/polylang.2.0.2.zip"
                },
                "require": {
                    "composer/installers": "v1.1.0"
                }
            }
        }
    ],
    "require-dev": {
    },
    "require": {
        "wp-cli/wp-cli" : "0.24.1",
        "koala-framework/composer-extra-assets": "1.2.1",
        "wp-block-admin": "0.2.3",
        "bibcnrs/wp-ebsco-widget": "0.8.0",
        "timber/timber": "0.22.1",
        "restrict-taxonomies": "1.3.0",
        "rss-shortcode": "0.2",
        "polylang": "2.0.2"
    },
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "require-npm": {
            "bibcnrs-widget": "1.0.3"
        }
    },
    "scripts" : {
        "post-install-cmd" : [
            "ln -s /var/www/html/wp-content/vendor/wp-cli/wp-cli/bin/wp /usr/bin/wp",
            "source /var/www/vendor/wp-cli/wp-cli/utils/wp-completion.bash",
            "source ~/.bash_profile"
        ]
    }
}
