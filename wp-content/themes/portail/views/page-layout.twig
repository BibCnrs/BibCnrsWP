<html>
    <head>
        <title>{% block title %}{% endblock %}</title>
        <meta charset="utf-8"/>
        <meta name="description" content="site des portails CNRS">
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="robots" content="{{ robot_index == 'true' ? 'index follow' : 'noindex nofollow' }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% block css %}
            <link rel="stylesheet" media="all" href="{{theme.uri}}/style.css" type="text/css">
        {% endblock %}
        {% block js %}
            <script src="{{theme.uri}}/js/flipflop.js" type="text/javascript"></script>
        {% endblock %}
        <link rel="shortcut icon" href="{{theme.uri}}/images/favicon.ico">
        <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=10" />
        <![endif]-->

        <!--[if IE 9]>
        <script src="/js/html5-ie.js" type="text/javascript"></script>
        <![endif]-->
        {{ wp_head }}
    </head>
    <body>
        <div class="bib-container" >
            {% block header %}
            <header id="header" class="bsbb">
                {# <div class="clear"></div> #}
                <div class="connexion bsbb">
                    <a href="/">
                        <img
                            src="{{theme.uri}}/images/bibcnrs-logo-{{currentCategory ? currentCategory.slug : 'visite'}}.png"
                            class="bibcnrslogo"
                            alt="logo bibcnrs {{currentCategory.title}}"
                        />
                    </a>
                    <img src="{{theme.uri}}/images/decor-header.png" class="decoheader"/>
                    <div class="sitetitle bsbb">
                        <div class="largetitle">{{long_title}}</div>
                        <div class="smalltitle">{{short_title}}</div>
                    </div>
                    <div class="language">
                        {{language_switcher}}
                    </div>
                    {{ "[ebsco_widget_header]"|shortcodes }}
                </div>
            </header>
            {% endblock %}
            <div class="main">
                <div class="navigations">
                    <div class="navHeader">
                        {{__('News', 'bibcnrs')}} &rarr;
                    </div>
                    {% block navigation %}
                    <nav role="navigation" class="principal">
                        <div class=principalbas>
                            <ul class="menu">
                                {% for item in principal.get_items %}
                                <li class="nav-main-item  {{item.classes | join(' ')}}">
                                    <a class="nav-main-link" href="{{item.get_link}}">
                                        {{item.title}}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>
                    {% endblock %}
                </div>
            {% block content %}
                    {% block breadcrumb %}
                        <span class="bread">
                            <a href="{{ http_host }}/{{__('Home', 'bibcnrs')}}">
                                {{__('Home', 'bibcnrs')}}
                            </a>
                        </span>
                    {% endblock %}
            {% endblock %}
            </div>
            {% block footer %}
                <div class="clear"></div>
                <footer>

                    <div class="menu-bas-fr-container">
                        <a href="http://www.cnrs.fr" target="_blank" >
                            <img src="{{theme.uri}}/images/cnrs.png" alt="logo cnrs" class="logocnrs"/>
                        </a>
                        <ul class="menu-bas-fr">
                            {% if currentCategory.description %}
                                <li class="nav-main-item font-{{currentCategory.description}}">
                                {% if site.language|slice(0,2) == 'en' %}
                                    <a
                                        href="http://www.cnrs.fr/en/institutes/{{currentCategory.description}}-{{links}}.html"
                                        class ="font-{{currentCategory.description}}"
                                        target="_blank"
                                    >
                                {% elseif  site.language|slice(0,2) == 'fr' and currentCategory.description == 'insu' %}
                                    <a
                                        href="http://www.{{currentCategory.description}}.cnrs.fr"
                                        class ="font-{{currentCategory.description}}"
                                        target="_blank"
                                    >
                                {% else %}
                                    <a
                                        href="http://www.cnrs.fr/{{currentCategory.description}}"
                                        class ="font-{{currentCategory.description}}"
                                        target="_blank"
                                    >
                                {% endif %}
                                        {{currentCategory.description|upper}}
                                    </a>
                                </li>
                                <li class="cnrsli">&nbsp;|&nbsp;</li>
                                <li class="nav-main-item">
                                    <a href="/{{__('mailing-list-for', 'bibcnrs')}}-{{currentCategory.description}}">
                                        {% if site.language|slice(0,2) == 'en' %}
                                            {{currentCategory.name}} {{__('mailing list', 'bibcnrs')}}
                                        {% else %}
                                            {{__('mailing list', 'bibcnrs')}} {{currentCategory.name}}
                                        {% endif %}
                                    </a>
                                </li>
                                <li class="cnrsli">&nbsp;|&nbsp;</li>
                            {% endif %}
                            {% for item in secondaire.get_items %}
                                <li class="nav-main-item {{item.classes | join(' ')}}">
                                    <a class="nav-main-link" href="{{item.get_link}}">
                                        {{item.title}}
                                    </a>
                                </li>
                                <li class="footerslash">&nbsp;|&nbsp;</li>
                            {% endfor %}
                            </ul>
                    </div>
                    <a href="https://twitter.com/bibcnrs" target="_blank" >
                        <img src="{{theme.uri}}/images/twitter.png" alt="logo twitter" class="logotwitter"/>
                    </a>
                </footer>
            {% endblock %}
        </div>
        {{wp_footer}}
        <!-- Piwik -->
        <script type="text/javascript">
            var _paq = _paq || [];
            _paq.push(['trackPageView']);
            _paq.push(['enableLinkTracking']);
            (function() {
                var u="//piwik2.inist.fr/";
                _paq.push(['setTrackerUrl', u+'piwik.php']);
                _paq.push(['setSiteId', '1']);
                var d=document,
                    g=d.createElement('script'),
                    s=d.getElementsByTagName('script')[0];
                g.type='text/javascript';
                g.async=true;
                g.defer=true;
                g.src=u+'piwik.js';
                s.parentNode.insertBefore(g,s);
            })();
        </script>
        <noscript>
            <p>
                <img src="//piwik2.inist.fr/piwik.php?idsite=1" style="border:0;" alt="" />
            </p>
        </noscript>
        <!-- End Piwik Code -->
    </body>
</html>
