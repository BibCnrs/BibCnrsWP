<html>
    <head>
        <title>{% block title '' %}</title>
        <meta charset="utf-8"/>
        <meta name="description" content="site des portails CNRS">
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="robots" content="noindex, nofollow">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% block css %}
            <link rel="stylesheet" media="all" href="{{theme.uri}}/style.css" type="text/css">
        {% endblock %}
        <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=10" />
        <![endif]-->

        <!--[if IE 9]>
        <script src="/js/html5-ie.js" type="text/javascript"></script>
        <![endif]-->
        {{ wp_head }}
    </head>
    {% block body %}
        <body>
    {% endblock %}
        <div class="bib-container" >
            {% block header %}
            <header id="header" class="bsbb">
                <div class="clear"></div>
                <div id="hierarchie">
                    <ul id="cnrs">
                        <li class ="cnrsli"><a href="http://www.cnrs.fr" target="_blank">CNRS</a></li>
                        <li class="cnrsli">&nbsp;|&nbsp;</li>
                        <li class ="cnrsli"><a href="http://www.cnrs.fr/dist/" target="_blank">DIST</a></li>
                        {% if other %}
                            <li class="cnrsli">&nbsp;|&nbsp;</li>
                            <li class ="cnrsli"><a href="http://www.cnrs.fr/{{currentCategory.description}}" target="_blank">{{currentCategory.description|upper}}</a></li>
                        {% endif %}
                    </ul>
                </div>
                <div>{{ '[bibcnrs_header]'|shortcodes }}</div>
                <div class="language">
                    {{language_switcher}}
                </div>
            </header>
            {% endblock %}
            <div class="main">
                <div class="navigations">
                    {% block navigation %}
                    <nav role="navigation" class="principal">
                        <div class=principalbas>
                            <ul class="menu">
                                {% for item in principal.get_items %}
                                <li class="nav-main-item  {{item.classes | join(' ')}}">
                                    <a class="nav-main-link" href="{{item.get_link}}">
                                        {{item.title}}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>
                    {% endblock %}
                    <div class="bread">
                    {% block breadcrumb %}
                        <a href="{{ http_host }}">Accueil</a>
                    {% endblock %}
                    </div>
                </div>
            {% block content %}
            {% endblock %}
            </div>
            {% block footer %}
                <div class="clear"></div>
                <footer>
                    <div class="menbu-bas-fr-container">
                        <ul class="menu-bas-fr">
                            {% for item in secondaire.get_items %}
                            <li class="nav-main-item {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a>
                                {% endfor %}
                            </ul>
                    </div>
                    <a href="https://twitter.com/bibcnrs" target="_blank" ><img src="{{theme.uri}}/images/twitter.png" alt="logo twitter" class="twitter"/></a>
                </footer>
            {% endblock %}
        </div>
        {{wp_footer}}
    </body>
</html>
