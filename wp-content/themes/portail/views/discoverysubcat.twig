{# discoverysubcat.twig #}
{% macro macro(title, slug, posts, lang) %}
    <div class="h2disc">
        <div class="discdomain">{{title|upper}}</div>
        <hr class="titleline font-{{slug.description}}"></hr>
        {% for post in posts %}
            {% if post.periode %}
                {% set dateFin = post.periode|split(' - ', 2)|last %}
                {% if lang == 'fr' %}
                    {% set dateFr = dateFin|split('/') %}
                    {% set dateEng = [dateFr.2, dateFr.1, dateFr.0]|join("/") %}
                {% else %}
                    {% set dateEng = dateFin %}
                {% endif %}
            {% else %}
                {% set dateEng = '2020/12/31' %}
            {% endif %}
            {% if now|date('Y/m/d') <= dateEng %}
                <div class="disctitle">
                    {% if post.disc_url %}
                    <a href="http://{{slug.description}}.bib.cnrs.fr/login?url={{post.disc_url}}" target="_blank" class="font-{{slug.description}}">
                        {{post.title}}
                    </a>
                    {% else %}
                        <span class="font-{{slug.description}}">{{post.title}}</span>
                    {% endif %}
                    {{__('Test date:', 'bibcnrs')}} <span class="testdate">{{post.periode}}</span>
                </div>
                <div class="flipflop" onclick="flipflop('{{slug.description}}-{{loop.index}}');">{{__('More', 'bibcnrs')}}<span class="arrow"> â†’ </span></div>
                <div id="{{slug.description}}-{{loop.index}}" class="repdisc">{{post.content}}</div>
             {% endif %}
        {% endfor %}
    </div>
{% endmacro %}
