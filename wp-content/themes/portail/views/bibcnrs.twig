{% extends 'page-layout.twig' %}
{% block title %}
    {{site.name}} - {{currentCategory.name}}
{% endblock %}
{% block js %}
    {{parent()}}
    <script src="{{theme.uri}}/js/faq.js" type="text/javascript"></script>
{% endblock %}
{% block content %}
    <div id="content" class="bsbb">
        {% block breadcrumb %}
            <span class="bread">
                <a href="/">{{__('Home', 'bibcnrs')}}</a> >> {{currentCategory.name}}
            </span>
        {% endblock %}       
        <div id="center">
            <div id="pagefaq">
                <h1>{{currentCategory.name}}</h1>
                {% for sscat in bibcnrs %}
                    {{sscat.title}}
                    <ul>
                    {% for post in sscat.posts %}
                        <li><a href="{{site.url}}/{{post.slug}}">{{post.title}}</a></li>
                    {% endfor %}
                </ul>
                {% endfor %}
            </div>
       </div>
   </div>
{% endblock %}
