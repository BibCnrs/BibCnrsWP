{% import "homenews.twig" as homenews %}
{% extends 'page-layout.twig' %}
{% block content %}
<div id="contentaccueil" class="bsbb">
    <div id="entete">
        <img src="{{theme.uri}}/images/sommaire2.jpg" alt="bsn reseau" class="bsbb"/>
        <img src="{{theme.uri}}/images/logocnrs2.png" alt="bsn reseau" class="bsbb logoaccueil"/>
        <img src="{{theme.uri}}/images/bibcnrs-logo-home.png" alt="logo bibcnrs" class="bsbb logobibcnrs"/>
        <div id="recherchegenerale">
            <form action="{{site.url}}/category/biologie/" id="recherchebase" method="get">
                <label for "searchterm"><input type="text" id="searchterm" name="search_term" placeholder="d&eacute;passer les fronti&egrave;res">
                    <input type="submit" value="Chercher"/>
                </form>
            </div>
            <div id="atoz">
                <img src ="{{theme.uri}}/images/atoz.png" alt="bientot A to Z" usemap="#zonemap"/>
                <map name="zonemap">
                    <area shape="rect" coords="125,0,300,33" href="{{site.url}}/bases-de-donnees" alt="bases">
                </map>
            </div>
            <nav role="navigation" id="principal">
                <div class=principalbas>
                    <ul class="menu">
                        {% for item in principal.get_items %}
                        <li class="nav-main-item {{item.classes | join(' ')}}">
                            <a class="nav-main-link" href="{{item.get_link}}">
                                <span>{{item.title}}</span>
                                <img src="{{theme.uri}}/images/edt.png"/>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
        </div>
        <div id="center3">
            {% for box in news %}
            {{ homenews.macro(box.title, box.slug, box.posts) }}
            {% endfor %}
        </div><!-- fin center -->
    </div><!--/contentaacueil-->
{% endblock %}
