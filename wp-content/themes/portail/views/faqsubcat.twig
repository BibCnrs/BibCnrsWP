{# faqsubcat.twig #}
{% macro macro(slug, posts) %}
    <div class="h2faq">{{slug.name}}
        {% for post in posts %}
                <div class="faqtitle" onclick="flipflop('rep-{{post.id}}');">{{post.post_title}}</div>
                <div id="rep-{{post.id}}" class="repfaq">
                	{{post.content}}
                </div>
        {% endfor %}
    </div>
{% endmacro %}
