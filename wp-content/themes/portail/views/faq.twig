{% extends 'page-layout.twig' %}
{% block title %}
    {{site.name}} - FAQ
{% endblock %}
{% block js %}
    {{parent()}}
    <script src="{{theme.uri}}/js/faq.js" type="text/javascript"></script>
{% endblock %}
{% block content %}
    <div id="content" class="bsbb">
        {% block breadcrumb %}
            <span class="bread">
                <a href="/">{{__('Home', 'bibcnrs')}}</a> >> FAQ
            </span>
        {% endblock %}       
        <div id="center">
            <div id="pagefaq">
                <h1 class="font-gene">FAQ</h1>
                {% for post in posts %}
                        <div class="faqtitle" id="faq-{{post.id}}">{{post.post_title}}</div>
                        <div id="rep-{{post.id}}" class="repfaq">
                            {{post.content}}
                        </div>
                {% endfor %}
            </div>
       </div>
   </div>
{% endblock %}
