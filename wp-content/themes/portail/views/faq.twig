{% import "faqsubcat.twig" as faqsubcat %}
{% extends 'page-layout.twig' %}
{% block title %}
    {{site.name}} - {{currentCategory.name}}
{% endblock %}
{% block js %}
    {{parent()}}
    <script src="{{theme.uri}}/js/faq.js" type="text/javascript"></script>
{% endblock %}
{% block content %}
    <div id="content" class="bsbb">
        <div id="center">
            <div id="pagefaq">
                <h1 class="font-{{currentCategory.description}}">FAQ</h1>
                {% for sscat in faqPosts %}
                {{ faqsubcat.macro(sscat.slug, sscat.posts) }}
                {% endfor %}
            </div>
       </div>
   </div>
{% endblock %}
